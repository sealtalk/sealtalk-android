<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67.5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_portrait"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:src="@drawable/common_default_portrait"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_iv_portrait"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_main_text"
            tools:text="Lily"
            android:textSize="16.5dp"
            />
        <TextView
            android:id="@+id/item_tv_st_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_sub_text"
            android:textSize="14dp"
            tools:text="SealTalk: st_lily"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seal_new_friend_add"
        android:textColor="@color/text_white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/common_btn_blue_selector"
        />

    <View style="@style/ac_search_list_view_divider"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>